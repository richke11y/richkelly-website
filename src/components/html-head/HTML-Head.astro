---
import HTMLHeadComments from '@components/html-head/HTML-Head-Comments.astro';
import HTMLHeadFavicons from '@components/html-head/HTML-Head-Favicons.astro';
import HTMLHeadGA from '@components/html-head/HTML-Head-GA.astro';
import HTMLHeadGoogleFont from '@components/html-head/HTML-Head-Google-Fonts.astro';
import HTMLHeadGoogleStructuredData from '@components/html-head/HTML-Head-Google-Structured-Data.astro';

const basePath = import.meta.env.BASE_URL;
const isProd = import.meta.env.PROD;

// CANONICAL URL
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<head>

	{isProd && <HTMLHeadGA /> }

	<meta charset="utf-8">

	<HTMLHeadComments />

	<title set:text={'Rich Kelly ~ Independent Front-End Web Development'} />

	<meta name="viewport" content="width=device-width" />
	<meta name="description" content={'Hello, my name is Rich and I\'m a front-end web developer with over 15 years experience building websites for customers in the hospitality, restaurant, music, clothing and jewellery sectors.'} />
	<meta name="generator" content={Astro.generator} />

	<meta property="og:title" content={'Rich Kelly ~ Independent Front-End Web Development'} />
	<meta property="og:description" content={'Hello, my name is Rich and I\'m a front-end web developer with over 15 years experience building websites for customers in the hospitality, restaurant, music, clothing and jewellery sectors.'} />
	<meta property="og:image" content={''} />
	<meta property="og:url" content={''} />
	<meta property="og:locale" content="en_GB" />
	<meta property="og:type" content="website" />
	<meta property="og:site_name" content={'Rich Kelly ~ Independent Front-End Web Development'} />

	<link rel="canonical" href={canonicalURL} />
	<link rel="sitemap" href={`${basePath}sitemap-index.xml`} />

	<HTMLHeadFavicons />

	<HTMLHeadGoogleFont />	

	<HTMLHeadGoogleStructuredData />

	<script is:inline>document.documentElement.classList.replace('no-js', 'js');</script>

	<script src="@js/main.js"></script>

</head>